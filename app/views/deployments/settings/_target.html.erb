<div class="contextual">
  <%= link_to l(:label_deploy_target_edit), url_for(:controller => 'deployment_targets', :action => 'edit', :id => @project, :environment_id => environment_id, :target_id => target.id) %>
  <%= link_to l(:label_deploy_target_delete), url_for(:controller => 'deployment_targets', :action => 'delete', :id => @project, :environment_id => environment_id, :target_id => target.id) %>
  <% unless target.is_dummy %>
  	<%= link_to l(:label_deployment_task_new), url_for(:controller => 'deployment_tasks', :action => 'new', :id => @project, :environment_id => environment_id, :target_id => target.id) %> 
  <% end %>
</div>
<div id="<%= target.hostname %>">
<h4><%= target.hostname %></h4> 
<p class="info"><%= target.description %></p>
<% unless target.is_dummy %>
  <% unless target.deployment_tasks.empty? %>
    <%= render :partial => 'deployments/settings/task', :locals => { :tasks => target.deployment_tasks, :target => target, :environment_id => environment_id } %>
  <% else %>
    <p class="nodata"><%= l(:text_deploy_no_tasks) %></p>
  <% end %>
<% else %> 
  <p class="nodata"><%= l(:text_deploy_dummy_target) %></p>
<% end %>
</div>
    	
